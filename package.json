{
  "name": "view",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write .",
    "lint:all": "npm run lint && npm run check-types && npm run format && npm run lint:fix",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --collect-coverage --passWithNoTests",
    "test:all": "npm run test & npm run lint:all",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.8",
    "@types/axios": "^0.14.0",
    "@types/react-scroll": "^1.8.3",
    "axios": "^0.27.2",
    "daisyui": "^2.11.0",
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.30.0",
    "react-icons": "^4.4.0",
    "react-intersection-observer": "^9.4.0",
    "react-scroll": "^1.8.7",
    "swiper": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.4.1",
    "swr": "^1.2.2",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "yarn format",
      "yarn lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test:all",
      "pre-push": "npm test:all"
    }
  }
}
